<Window x:Class="WpfView.Controls.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView.Controls"
        WindowStartupLocation="CenterScreen"
        Title="Curse Paint"
        mc:Ignorable="d"
        d:DesignWidth="1200"
        d:DesignHeight="675"
>
    <DockPanel>
        <local:WindowMenuBar DockPanel.Dock="Top"/>

        <local:WindowToolbar DockPanel.Dock="Top"/>

        <local:WindowSidebar DockPanel.Dock="Left"/>

        <local:CanvasStatus DockPanel.Dock="Bottom"/>

        <local:ImageCanvas/>
    </DockPanel>
</Window>
